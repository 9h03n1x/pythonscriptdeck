{
	"$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
	"Name": "PythonScriptDeck",
	"Version": "0.5.0.3",
	"Author": "nicoohagedorn",
	"Actions": [
		{
			"Name": "Run Script",
			"UUID": "com.nicoohagedorn.pythonscriptdeck.script",
			"Icon": "imgs/plugin/python",
			"Tooltip": "execute a python script via a key press",
			"PropertyInspectorPath": "ui/python-script.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/gemini_icons/pyNoFileFound",
					"TitleAlignment": "bottom"
				}
			]
		},
		{
			"Name": "Run Service",
			"UUID": "com.nicoohagedorn.pythonscriptdeck.service",
			"Icon": "imgs/plugin/python",
			"Tooltip": "execute a python script based on a set timer",
			"PropertyInspectorPath": "ui/python-service.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Name": "Running",
					"Image": "imgs/actions/pyServiceRunning",
					"TitleAlignment": "bottom"
				},
				{
					"Name": "Stopped",
					"Image": "imgs/actions/pyServiceStopped",
					"TitleAlignment": "bottom"
				}
			]
		}
	],
	"Category": "Python Script Deck",
	"CategoryIcon": "imgs/plugin/python",
	"CodePath": "bin/plugin.js",
	"Description": "This Plugin allows you to execute Python scripts and display the results on a StreamDeck Key",
	"Icon": "imgs/plugin/marketplace",
	"URL": "https://youtu.be/thXQx5Xv6x4",
	"SDKVersion": 2,
	"Software": {
		"MinimumVersion": "6.5"
	},
	"OS": [
		{
			"Platform": "mac",
			"MinimumVersion": "13.0"
		},
		{
			"Platform": "windows",
			"MinimumVersion": "10"
		}
	],
	"Nodejs": {
		"Version": "20",
		"Debug": "enabled"
	},
	"UUID": "com.nicoohagedorn.pythonscriptdeck"
}